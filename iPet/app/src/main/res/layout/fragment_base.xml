<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BaseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/coloWhite">

        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dustismo_bold"
            android:textSize="40dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3 000" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/coin"
            app:layout_constraintStart_toEndOf="@id/text_money"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dog_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/normal_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/button_food"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/dog_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_money" />

        <TextView
            android:id="@+id/text_food"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/dustismo_bold"
            android:gravity="center"
            android:textSize="18dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_food"
            tools:text="10" />

        <ImageView
            android:id="@+id/button_upgrades"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/buy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_food" />

        <ImageView
            android:id="@+id/button_play"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ball"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_money" />


        <TextView
            android:id="@+id/text_play"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/dustismo_bold"
            android:gravity="center"
            android:textSize="18dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_play"
            tools:text="10" />

        <ImageView
            android:id="@+id/button_look"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/changing_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_play" />

        <TextView
            android:id="@+id/text_hunger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/dustismo_bold"
            android:gravity="center"
            android:textSize="20dip"
            app:layout_constraintEnd_toStartOf="@+id/button_play"
            app:layout_constraintStart_toEndOf="@+id/button_food"
            app:layout_constraintTop_toBottomOf="@+id/text_money"
            tools:text="Hunger 50/100" />

        <ProgressBar
            android:id="@+id/progress_hunger"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:progress="50"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/button_play"
            app:layout_constraintStart_toEndOf="@+id/button_food"
            app:layout_constraintTop_toBottomOf="@+id/text_hunger" />

        <TextView
            android:id="@+id/text_fun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dustismo_bold"
            android:gravity="center"
            android:textSize="20dip"
            app:layout_constraintEnd_toStartOf="@+id/button_play"
            app:layout_constraintStart_toEndOf="@+id/button_food"
            app:layout_constraintTop_toBottomOf="@id/progress_hunger"
            tools:text="Hunger 50/100" />

        <ProgressBar
            android:id="@+id/progress_fun"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:progress="50"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/button_play"
            app:layout_constraintStart_toEndOf="@+id/button_food"
            app:layout_constraintTop_toBottomOf="@+id/text_fun" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dustismo_bold"
            android:gravity="center"
            android:textSize="40dip"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@id/dog_image"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            tools:text="5 sec" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>